<Window MinWidth="500" MinHeight="190" MaxWidth="500" MaxHeight="190"
    x:Class="MinecraftLocalizer.Views.LoadingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Properties="clr-namespace:MinecraftLocalizer.Properties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MinecraftLocalizer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static Properties:Resources.LoadingWindowTitle}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Label x:Name="FilePathLabel" Margin="0,0,0,10" Grid.Row="0"
            FontSize="14" />

        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="30"
            Maximum="100"
            Minimum="0" />

        <Button Grid.Row="2"
            Content="{x:Static Properties:Resources.Cancel}"
            Padding="6"
            VerticalAlignment="Bottom"
            Click="CancelButtonCommand" />
    </Grid>
</Window>
