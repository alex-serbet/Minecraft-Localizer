<Window Width="380" Height="270"
    x:Class="MinecraftLocalizer.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Properties="clr-namespace:MinecraftLocalizer.Properties"
    xmlns:ViewModels="clr-namespace:MinecraftLocalizer.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MinecraftLocalizer.Views"
    xmlns:localization="clr-namespace:MinecraftLocalizer.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static Properties:Resources.Settings}"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.DataContext>
        <ViewModels:SettingsViewModel />
    </Window.DataContext>

    <Grid Height="Auto" Background="Transparent">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Margin="10,10,0,0" Grid.Row="0" Grid.Column="0"
            Content="{x:Static Properties:Resources.SourceLanguage}"
            VerticalAlignment="Center" />

        <ComboBox Margin="0,10,10,0" Grid.Row="0" Grid.Column="1"
            DisplayMemberPath="Content"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding SelectedSourceLanguage, Mode=TwoWay}"
            SelectedValuePath="Tag" />



        <Label Margin="10,10,0,0" Grid.Row="1" Grid.Column="0"
            Content="{x:Static Properties:Resources.TargetLanguage}" />

        <ComboBox Margin="0,10,10,0" Grid.Row="1" Grid.Column="1"
            DisplayMemberPath="Content"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding SelectedTargetLanguage, Mode=TwoWay}"
            SelectedValuePath="Tag" />



        <Label Margin="10,10,0,0" Grid.Row="2" Grid.Column="0"
            Content="{x:Static Properties:Resources.ProgramLanguage}" />

        <ComboBox Margin="0,10,10,0" Grid.Row="2" Grid.Column="1"
            SelectedValue="{Binding SelectedProgramLanguage}"
            SelectedValuePath="Tag">

            <ComboBoxItem Tag="ru">Русский</ComboBoxItem>
            <ComboBoxItem Tag="en">English</ComboBoxItem>
        </ComboBox>

        <Label Margin="10,10,0,0" Grid.Row="3" Grid.Column="0"
            Content="{x:Static Properties:Resources.TranslatorMode}" />

        <ComboBox Margin="0,10,10,0" Grid.Row="3" Grid.Column="1"
            SelectedValue="{Binding SelectedTranslatorMode}"
            SelectedValuePath="Tag">

            <ComboBoxItem Tag="ai_bot">AI Bot</ComboBoxItem>
            <ComboBoxItem Tag="google_translate">Google Translate</ComboBoxItem>
        </ComboBox>


        <Label Margin="10,10,0,0" Grid.Row="4" Grid.Column="0"
            Content="{x:Static Properties:Resources.DirectoryPath}" />

        <Grid Margin="0,10,10,0" Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                Text="{Binding DirectoryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                VerticalContentAlignment="Center" />
            <Button Grid.Column="1" Content=". . ." Command="{Binding SelectDirectoryPathCommand}" />
        </Grid>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2">
            <Button Margin="10,10,10,0" Height="30"
                Content="{x:Static Properties:Resources.SaveSettings}"
                Command="{Binding SaveSettingsCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </StackPanel>
    </Grid>
</Window>
